<div id="modalWindow-container" >
	
	<div id="createNewPostWindow">

		<h2 id="postWindow-title">
			Create new post
		</h2>
		<textarea name="" id="post-textarea" cols="30" rows="10"></textarea>
		<button class="file-modal-btn" id='btn-select-file' style="display: flex; width:220px; margin-top: 10px; margin-bottom:10px">
			<img src="img/uploadmedia.svg" alt="" style="width: 35px; margin-left: 2px; margin-top: auto; margin-bottom: auto;">
			<span style="margin: auto; color: white;font-size: 20px;">Photo or video</span>
		</button>
		
	{{!-- 	<div id = 'div-preview' style="
			width: 99%;
			margin: auto;
			margin-top: 10px;
			display:none;
			background:pink;
			" 
			
			>
		</div> --}}
		<img id= 'img-preview' src="img/uploadimage.png" alt="" 
			style="
			width: 100%;
			display: none;
			max-height: 230px;
			object-fit: scale-down;"
		>

		<video id = 'video-preview'controls width="100%" style="display: none; max-height:250px;">
			<source id ='video-preview-source' src="posts/${this.id}/content" type="video/mp4" />
			Sorry, your browser doesn't support embedded videos.
		</video>
		
		<input type="file" id="input-file" class='inputfile' style="display: none;">
		<div id="loading-message" style="
		                    display: none;
		                    width: 200px;
		                    margin: auto;">
			<img src="img/loadingspinner.gif" style=" 
		                    width:50px;
		                    margin: auto;">
		
			<span style="
		                        margin: auto;
		                        margin-left: -15px;
		                        color: #888da8;
		                        font-size: larger;
		                    ">Uploading your photo</span>
		</div>
		<div class= 'file-modal-buttons-container'>
			
			<button class= "file-modal-btn"  id="post-button">POST</button>
			<button class = "file-modal-btn" id="cancel-button">CANCEL</button>

			</div>
		</div>
		
	</div>

</div>



<div id='post-notification' style="background: white;
    width: 320px;
    position: fixed;
    z-index: 500;
    border: 1px solid;
	right:0px;
	top:10px;
	display: none;">

	<div id="close-notification-btn" style="background: #8080803b;
    position: absolute;
    width: 30px;
    height: 30px;
    top: 10px;
    right: 10px;
    border-radius: 100%;
	display:flex;
	">
		<span style="margin:auto"> X</span>

	</div>
	<div class="mCustomScrollbar" data-mcs-theme="dark">
		<ul class="notification-element">
			<li>
				<div class="author-thumb">
					<img src="img/avatar66-sm.jpg" alt="author">
				</div>
				<div style="width: 80%;">
					<div>
						<a style="font-size: initial;" href="profile" class="h6 notification-friend">Your post is ready
							to view.</a>
					</div>
					<span class="notification-date">
						<time class="entry-date updated" datetime="2004-07-24T18:18">
							March 2nd at 8:29pm
						</time>
					</span>
				</div>
			</li>
		</ul>
	</div>

</div>

